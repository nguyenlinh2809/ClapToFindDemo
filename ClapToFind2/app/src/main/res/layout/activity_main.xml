<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e1e1"
    tools:context="com.example.acer.claptofind.MainActivity">

    <TextView
        android:textStyle="bold"
        android:padding="10px"
        android:textColor="#080d8f"
        android:background="#65656b"
        android:gravity="center"
        android:textSize="30sp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="0dp"
        android:text="Clap to find your phone"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:id="@+id/textView2" />

    <TextView
        android:textStyle="bold"
        android:textColor="#F10"
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Which function do you want to open?"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Switch
        android:id="@+id/swPlayRingtone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="RingTone"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="38dp"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />



    <Switch
        android:id="@+id/swFlash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Flash"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toBottomOf="@+id/swPlayRingtone"
        android:layout_marginLeft="32dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="32dp"
        app:layout_constraintRight_toRightOf="parent" />
    <Switch

        android:text="Vibration"
        android:layout_marginTop="32dp"
        android:id="@+id/swVibrate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/swFlash"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="32dp"
        android:layout_marginRight="32dp"/>

    <TextView
        android:id="@+id/tvToggle"
        android:textStyle="bold"
        android:textColor="#F10"
        android:layout_marginTop="32dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swVibrate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Press button to TURN ON/ TURN OFF"/>

    <ImageButton
        android:id="@+id/imbtnToggle"
        android:layout_marginTop="20dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvToggle"
        android:scaleType="fitXY"
        android:background="@null"
        android:src="@drawable/image_button_off"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</android.support.constraint.ConstraintLayout>
